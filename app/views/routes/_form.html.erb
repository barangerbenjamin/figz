<%= simple_form_for route, html: { data: { controller: 'autocomplete' } } do |f| %>
    <%= f.input :name %>
    <%= f.input :start_location, input_html: { data: { target: 'autocomplete.start' } } %>
    <%= f.input :end_location, input_html: { data: { target: 'autocomplete.end' } } %>
    <%= f.input :distance %>
    <%= f.input :elevation %>
    <%= f.input :road_type %>
    <%= f.file_field :gpx %>
    <%= f.submit %>
<% end %>