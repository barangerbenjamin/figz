<div class="container mt-5">
  <div class="row">
    <div class="d-none d-sm-block col-sm-4 col-lg-3">
      <div class="sticky-top-spaced">
        <div class="card p-3 mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <strong>Categories</strong>
            <hr class="my-2">
          </div>
          <a href="#" class="panel-item">Cat 1</a>
          <a href="#" class="panel-item">Cat 2</a>
        </div>
        <div class="card p-3 mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <strong>Cities</strong>
          </div>
          <a href="#" class="panel-item">London</a>
          <a href="#" class="panel-item">Mexico City</a>
        </div>
        <div class="card p-3 mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <strong>Road type</strong>
          </div>
          <a href="#" class="panel-item">Road</a>
          <a href="#" class="panel-item">Dirt</a>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-8 col-lg-9">
      <h1>Index of Routes</h1>
      <div class="cards-route">
        <% @routes.each do |route| %>
          <div class="card-route card p-3 shadow rounded mb-3">
            <%= link_to route_path(route) do %>
              <h3><%= route.name %></h3>
              <p><%= route.id %></p>
              <p><%= route.distance %></p>
              <p><%= route.elevation %></p>
              <p><%= route.get_likes.size %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

