<div class="container mt-5">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="form-login border rounded shadow px-3 py-5">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary w-100 mb-3"%>
          </div>
        <% end %>

        <div class="d-flex align-content-center mb-4">
          <%= link_to omniauth_authorize_path(:user, :strava), class: "btn btn-strava d-flex justify-content-center align-items-center w-100" do  %>
            <i class="fab fa-strava"></i>
            <p class="ml-3 m-0">Log in with Strava</p>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
